# AI Product Studio Environment Configuration

# Application Settings
NODE_ENV=production
APP_PORT=5000
APP_URL=https://yourdomain.com
SESSION_SECRET=your-super-secret-session-key-here

# Database Configuration
POSTGRES_DB=ai_product_studio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-strong-postgres-password
POSTGRES_PORT=5432

# Redis Configuration (optional)
REDIS_PORT=6379

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-s3-bucket-name

# OpenRouter API Configuration
OPENROUTER_API_KEY=your-openrouter-api-key

# Google OAuth Configuration (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Object Storage Configuration (if migrating from Replit)
DEFAULT_OBJECT_STORAGE_BUCKET_ID=your-bucket-id
PRIVATE_OBJECT_DIR=/your-bucket/private
PUBLIC_OBJECT_SEARCH_PATHS=/your-bucket/public

# Domain Configuration
REPLIT_DOMAINS=yourdomain.com,www.yourdomain.com

# Nginx Configuration
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Security Settings
ISSUER_URL=https://replit.com/oidc
REPL_ID=your-repl-id

# Database connection string (auto-generated from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}